<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dinr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_horizontal"
    android:orientation="vertical">


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/custom_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Restaurants"
        android:textSize="22sp"
        dinr:fontName="MarkRegular.otf"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toLeftOf="@+id/favorite"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/sign_out"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:src="@drawable/restaurant_notfavourite"
        android:onClick="FavoriteClick"/>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:scaleType="center"
        android:paddingLeft="20dp"
        android:src="@drawable/arrow_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>