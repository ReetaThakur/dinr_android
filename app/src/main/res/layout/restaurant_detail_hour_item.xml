<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dinr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/opening_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="horizontal">

    <ImageView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/clock_iamge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_clock_yellow"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/restaurant_time_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/clock_iamge"
        android:layout_toLeftOf="@+id/radioButton"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <com.godynamo.dinr.ui.CustomTextView

            android:id="@+id/restaurant_opening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text=" 6:00pm - 8:30pm"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            dinr:fontName="MarkSmallCaps-Regular.otf"/>



        <com.godynamo.dinr.ui.CustomTextView
            android:id="@+id/seats_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text=" 2 @ Bar"
            android:textColor="@color/white"
            android:textSize="20sp"
            dinr:fontName="MarkSmallCaps-Regular.otf"/>
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/check_box_white"
        android:button="@null"
        android:padding="10dp" />

</RelativeLayout>


