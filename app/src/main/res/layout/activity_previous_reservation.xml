<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dinr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <com.godynamo.dinr.ui.CustomTextView
        android:visibility="gone"
        android:id="@+id/no_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:gravity="left"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:text="@string/no_reservations_yet"
        dinr:fontName="MarkBook.otf"/>


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/restaurant_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="35dp"
        android:layout_below="@+id/title"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:gravity="left"
        android:textStyle="bold"
        dinr:fontName="MarkBook.otf"/>


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/restaurant_reservation_time"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/restaurant_name"
        android:textColor="@color/white"
        android:gravity="left"
        android:textSize="20sp"
        dinr:fontName="MarkBook.otf"/>


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/restaurant_reservation_details"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/restaurant_reservation_time"
        android:textColor="@color/white"
        android:gravity="left"
        android:textSize="20sp"
        dinr:fontName="MarkBook.otf"/>


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/restaurant_address"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/restaurant_reservation_details"
        android:textColor="@color/white"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/icon_marker_white"
        dinr:fontName="MarkBook.otf"/>


    <com.godynamo.dinr.ui.CustomTextView
        android:id="@+id/restaurant_phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/restaurant_address"
        android:textColor="@color/white"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/icon_phone_white"
        dinr:fontName="MarkBook.otf"/>



    <Button
        android:id="@+id/dialogButtonCancelReservation"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_centerInParent="true"
        android:background="@drawable/action_button2"
        android:textColor="@color/white"
        android:text="@string/cancel_reservation"
        android:layout_below="@+id/restaurant_phone"
        android:layout_marginTop="100dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>